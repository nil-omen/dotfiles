// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "ui_font_family": "Rubik",
  "title_bar": {
    "show_branch_icon": true,
  },
  "tabs": {
    "file_icons": true,
  },
  "agent": {
    "default_model": {
      "provider": "google",
      "model": "gemini-2.5-pro",
    },
    "model_parameters": [],
  },
  "auto_update": false,
  "base_keymap": "VSCode",
  "icon_theme": "Material Icon Theme",
  "buffer_font_size": 14.0,
  "indent_guides": {
    "background_coloring": "indent_aware",
  },
  "buffer_font_family": "FiraMono Nerd Font Mono",
  "telemetry": {
    "diagnostics": false,
    "metrics": false,
  },
  "ui_font_size": 16.0,
  "theme": {
    "mode": "system",
    "light": "Monokai Nebula Light",
    "dark": "Monokai Nebula",
  },
  // 00: Fully Transparent (Invisible)
  // 80: ~50% Opacity
  // BF: ~75% Opacity
  // FF: Fully Opaque (Solid)
  // "experimental.theme_overrides": {
  //   "background.appearance": "blurred",
  //   "background": "#000000bf",
  //   "editor.background": "#000000bf",
  //   "editor.gutter.background": "#000000bf",
  //   "tab_bar.background": "#000000bf",
  //   "terminal.background": "#000000bf",
  //   "toolbar.background": "#000000bf",
  //   "status_bar.background": "#000000bf",
  //   "title_bar.background": "#000000bf",
  //   "panel.background": "#000000bf"
  // },
  "features": {
    "edit_prediction_provider": "zed",
    // "edit_prediction_provider": "zed"
  },
  "languages": {
    "Nix": {
      "language_servers": ["nixd", "!nil"],
    },
  },
}
